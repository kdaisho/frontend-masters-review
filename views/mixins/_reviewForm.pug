mixin reviewForm(course)
    .reviewer
        h2.reviewer__title Leave a review!
        form(id="reviewer" action=`/reviews/${course._id}` method="POST")
            textarea.reviewer__text.required(name="text" placeholder=`${course.course} course is specifically focused on...` required)
            .reviewer__meta
                .reviewer__stars
                    each number in [5, 4, 3, 2, 1]
                        input.rating(type="radio" id=`star${number}` name="rating" value=number)
                        label(for=`star${number}`) #{number} Stars
                .reviewer__error
                    p &#8593; Please rate the course â˜¹ &#8593;
                input.button.m-t05(id="submitReview" type="button" value="submit review")